{
  "name": "xlox-be",
  "version": "0.0.1",
  "module": "./src/index.ts",
  "description": "Node app for xlox",
  "main": "./src/index.ts",
  "keywords": [
    "backend"
  ],
  "scripts": {
    "k6": "postman-to-k6 collection.json -o k6-script.js",
    "mock": "prism mock https://raw.githack.com/OAI/OpenAPI-Specification/master/examples/v3.0/petstore-expanded.yaml",
    "mock-server": "prism mock ./src/openapi.yaml",
    "generate": "npx @redocly/cli build-docs src/openapi.yaml",
    "preview": "redocly preview-docs src/openapi.yaml",
    "collection": "openapi2postmanv2 -s src/openapi.yaml -o collection.json",
    "client": "autorest --input-file=src/openapi.yaml --typescript --output-folder=client/ --namespace=pets",
    "local": "SET NODE_ENV=local&& ts-node-dev --poll src/index.ts",
    "dev": "SET NODE_ENV=dev&& ts-node-dev --poll src/index.ts",
    "prod": "export NODE_ENV=dev&& ts-node-dev --poll src/index.ts",
    "clean": "rimraf ./dist",
    "build": "npm run clean && tsc",
    "pm2": "npm run build && pm2 start ecosystem.config.js",
    "start": "npm run build && node dist/index.js",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "changelog": "npx auto-changelog --package",
    "release:minor": "npm version minor -m \"Minor bump version to %s\"&&git add CHANGELOG.md",
    "release:patch": "npm version patch -m \"Patch bump version to %s\"&&git add CHANGELOG.md"
  },
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1547.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "http-status-codes": "^2.3.0",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "mongoose": "^7.2.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^2.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "path": "^0.12.7",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@apideck/postman-to-k6": "^1.8.10",
    "@jest/types": "^29.6.3",
    "@redocly/cli": "^1.9.1",
    "@stoplight/prism-cli": "^5.5.4",
    "@types/bcrypt": "^5.0.2",
    "@types/chance": "^1.1.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/multer-s3": "^3.0.3",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "autorest": "^3.7.1",
    "eslint": "^8.54.0",
    "jest": "29.7.0",
    "openapi-to-postmanv2": "^4.20.0",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.4",
    "ts-jest": "29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
